import numpy as np
import matplotlib.pyplot as plt

x=np.arange(0,1,.001)
X,Y=np.meshgrid(x,x)

#variables for 2D PIB wavefunction
nx = 2
Lx = 1
ny = 2
Ly = 1

#creating image array based on 2D PIB wavefunction
z= (2/Lx)**(1/2)*np.sin((nx*np.pi*X)/Lx)*(2/Ly)**(1/2)*np.sin((ny*np.pi*Y)/Ly)


plt.figure(1)
plt.clf()
#plt.xlim(0,100)
#plt.ylim(0,100)
plt.imshow(z)
plt.colorbar()
